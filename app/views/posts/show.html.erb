
<h1>
  <strong>Title:</strong>
  <%= @post.title %>
</h1>
<hr>

<p>
  <strong>Contents:</strong>
  <%= @post.contents %>
</p>

<%= link_to '수정', edit_post_path(@post) , class: 'btn btn-warning text-white'%>
<%= link_to '목록', posts_path, class: 'btn btn-info' %>
<%= link_to '삭제', post_path(@post), method: 'delete', class: 'btn btn-danger'%>


<%= render "comments/form", post: @post %>

<table class="table">
  <thead>
    <tr>
      <th scope="id">id</th>
      <th scope="Content">Content</th>
      <th scope="Button">Button</th>
    </tr>
  </thead>
  <tbody>
    <% @post.comments.each do |comment|%>
      <tr>
        <th scope="row"><%= comment.id%></th>
        <td><%= comment.content%></td>
        <td><%= link_to "삭제", "/comments/#{comment.id}", method: "delete"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

